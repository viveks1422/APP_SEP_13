<div id="loginForm" class="well col-md-5 col-md-offset-3">
        <legend>Sign in</legend>

        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
                  <div class="form-group">
                          <div class="col-md-12">
                            <%= f.input :email, :required => false, :autofocus => true, input_html: {class: "form-control"} %>
                        </div>
                </div>
                <div class="form-group">
                          <div class="col-md-12">
                            <%= f.input :password, :required => false, input_html: {class: "form-control"} %>
                        </div>
                </div>
                <div class="form-group">
                        <div class="col-md-12">
                            <%= f.input :remember_me, :label => false, :inline_label => "Yes, remember me", :as => :boolean if devise_mapping.rememberable? %>
                          </div>
                </div>
                <div class="form-group">
                        <div class="col-md-12">
                            <%= f.button :submit, "Sign in", class: "btn btn-default" %>
                        </div>
                </div>
        <% end %>

        <%= render "devise/shared/links" %>